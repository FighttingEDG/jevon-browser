{
  "name": "jevon-browser",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder -w"
  },
  "build": {
    "appId": "com.example.minibrowser",
    "productName": "JevonBrowser",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "fileAssociations": [
        {
          "ext": [
            "html",
            "htm"
          ],
          "name": "HTML Document"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JevonBrowser",
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  },
  "devDependencies": {
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12"
  }
}
